{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "src/views/**",
          "src/public/**"
        ],
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/src/public/$1"
    },
    {
      "src": "/health",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}